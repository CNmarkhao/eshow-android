<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin_top"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlWechat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_itemHeight"
                    android:background="@drawable/list_item_selector"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:background="@drawable/wechat_icon_normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信账号"
                                android:layout_marginLeft="@dimen/small_margin_10"
                                android:textColor="@color/normal_text"
                                android:textSize="@dimen/list_textSize" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ivWechatProgress"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_progressbar"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvWechatState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:layout_centerInParent="true"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/list_textSize" />
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="@dimen/form_arrow_width"
                            android:layout_height="@dimen/form_arrow_height"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:background="@drawable/ic_arrow_form" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divide_height"
                    android:background="@color/divide" />

                <RelativeLayout
                    android:id="@+id/rlQQ"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_itemHeight"
                    android:background="@drawable/list_item_selector"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:background="@drawable/qq_icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_margin_10"
                            android:text="QQ账号"
                            android:textColor="@color/normal_text"
                            android:textSize="@dimen/list_textSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ivQQProgress"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_progressbar"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvQQState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:layout_centerInParent="true"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/list_textSize" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/form_arrow_width"
                            android:layout_height="@dimen/form_arrow_height"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:background="@drawable/ic_arrow_form" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
