<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.bangqu.activity.ChooseAlbumActivity">

    <include layout="@layout/include_mune_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/txt_14"
            android:textColorHint="@color/hint_color"
            android:hint="请输入相册标题"
            android:background="@null"
            android:padding="15dp"/>
        <com.longtu.base.view.ScrollGridView
            android:id="@+id/gvChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_margin="5dp"
            android:scrollbars="none">
        </com.longtu.base.view.ScrollGridView>

    </LinearLayout>

</LinearLayout>
