<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangqu.lib">

    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name="com.bangqu.activity.AlbumActivity" />
        <activity android:name="com.bangqu.activity.ChooseAlbumActivity" />
        <activity android:name="com.bangqu.activity.SelectPhotoActivity" />
        <activity android:name="com.bangqu.activity.AlbumDetailsActivity" />
    </application>

</manifest>